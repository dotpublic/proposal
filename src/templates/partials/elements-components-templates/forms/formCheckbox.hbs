{{#if error}}
	{{> elements-components-templates/forms/formError }}
{{/if}}
<div class="c-forms__label c-forms__label--wrapper">
	<input class="c-forms__input c-forms__input--checkbox" type="checkbox" {{> elements-components-templates/forms/formAttributes }}>
	<label for="{{id}}" class="c-forms__label c-forms__label--inline c-forms__label--checkbox">{{label}}</label>
	{{#if hint}}
		<small class="c-forms__hint c-forms__hint--inline">{{hint}}</small>
	{{/if}}
	{{#if fields}}
		<fieldset class="c-forms__fieldset c-forms__sub-fields">
			{{#each fields}}
				<div class="c-forms__field">
					{{> (lookup . 'template')}}
				</div>
			{{/each}}
		</fieldset>
	{{/if}}
</div>
